@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  font-family Roboto, helvetica, arial, sans-serif
  ul
    list-style-type none
    margin 0px
    padding 0px
    li
      padding 0px
      margin 0px
      position relative
      height 34px
      .name
        position absolute
        top 5px
        left 0px
        width 130px
        height 24px
        line-height 24px
        display block
        text-align right
        font-weight bold
      .bar-container
        position absolute
        left 150px
        width 400px
        height 24px
        top 5px
        .bar
          position absolute
          left 0px
          top 0px
          height @height
          background ColorBlue
          border-top-right-radius 4px
          border-bottom-right-radius 4px
          .value
          .popisek
            position absolute
            line-height @height
          .value
            left 100%
            padding-left 6px
            font-weight 400
          .popisek
            right 0px
            color white
            padding-right 10px
